#Start Window Manager
matchbox-window-manager &
#Update files in /home/kiosk and start midori
sleep 10
while true; do
	rsync -qr --delete --exclude='.Xauthority' /opt/kiosk/ {{ kiosk_user_home_dir }}/
	midori -i {{ kiosk_reload_url_seconds }} -e Fullscreen -e Navigationbar -a {{ kiosk_url }}
done
